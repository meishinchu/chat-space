.user-info
  %p.user-info__name
    =current_user.name
  .user-info__icon
    = link_to new_group_path, class: "user-info__icon__pencil" do
      %i{"class":"fa fa-pencil-square-o",  "aria-hidden":"true"}
    = link_to edit_user_path(current_user.id), class: "user-info__icon__cog" do
      %i{"class":"fa fa-cog",  "aria-hidden":"true"}
.group-info
  - current_user.groups.each do |group|
    = link_to group_messages_path(group.id), class: "group-info__link" do
      %p.group-info__link__name
        = group.name
      %p.group-info__link__message
        = group.get_lastest_message
